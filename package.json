{
  "name": "newcam-surveillance-system",
  "version": "1.0.0",
  "description": "Sistema de Vigilância por Câmeras IP com RTSP/RTMP, gravação contínua e transmissão HLS",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:worker\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:worker": "cd worker && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm install --production",
    "build:worker": "cd worker && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:worker\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "start:worker": "cd worker && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:worker": "cd worker && npm test",
    "docker:dev": "docker-compose -f docker/development/docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose -f docker/production/docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "setup": "npm install && npm run setup:frontend && npm run setup:backend && npm run setup:worker",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && npm install",
    "setup:worker": "cd worker && npm install",
    "health:check": "node scripts/system-health-check.js",
    "setup:test-data": "node scripts/setup-test-data.js",
    "system:init": "npm run setup:test-data && npm run health:check",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "db:reset": "cd backend && npm run db:reset",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "sync": "node sync-to-server.js",
    "sync:all": "node sync-manual.js all",
    "sync:frontend": "node sync-manual.js frontend",
    "sync:backend": "node sync-manual.js backend",
    "sync:auto": "node sync-auto-enhanced.js",
    "sync:auto-ps": "node sync-auto-powershell.js",
    "sync:auto-simple": "node sync-auto-simple.js",
    "start:production": "cd backend && NODE_ENV=production npm start",
    "deploy:server": "node deploy-to-server.js"
  },
  "keywords": [
    "surveillance",
    "camera",
    "rtsp",
    "rtmp",
    "hls",
    "streaming",
    "recording",
    "security",
    "ip-camera",
    "video-management"
  ],
  "author": "NewCAM Development Team",
  "license": "MIT",
  "devDependencies": {
    "chokidar": "^4.0.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "frontend",
    "backend",
    "worker"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/newcam-surveillance-system.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/newcam-surveillance-system/issues"
  },
  "homepage": "https://github.com/seu-usuario/newcam-surveillance-system#readme",
  "dependencies": {
    "@modelcontextprotocol/server-sequential-thinking": "^2025.7.1",
    "@simonb97/server-win-cli": "^0.2.0",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "minimatch": "^10.0.3",
    "node-fetch": "^3.3.2"
  }
}
