# ========================================
# CONFIGURAÇÕES DO PROJETO NEWCAM
# Sistema de Vigilância por Câmeras IP
# ========================================
# INSTRUÇÕES:
# 1. Copie este arquivo para .env
# 2. Preencha todas as variáveis com seus valores reais
# 3. NUNCA commite o arquivo .env no Git
# ========================================

# Configurações da Aplicação
NODE_ENV=development
PORT=3000
API_PORT=3001
WORKER_PORT=3002

# ========================================
# JWT E SEGURANÇA
# ========================================
# IMPORTANTE: Use chaves seguras e únicas para produção
# Gere com: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=sua_chave_jwt_super_secreta_aqui
JWT_REFRESH_SECRET=sua_chave_refresh_jwt_super_secreta_aqui
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# BANCO DE DADOS SUPABASE
# ========================================
# Obtenha essas informações no painel do Supabase
DATABASE_URL=postgresql://postgres.SEU_PROJETO:SUA_SENHA@aws-0-sa-east-1.pooler.supabase.com:5432/postgres
SUPABASE_URL=https://SEU_PROJETO.supabase.co
SUPABASE_ANON_KEY=sua_anon_key_do_supabase
SUPABASE_SERVICE_ROLE_KEY=sua_service_role_key_do_supabase

# ========================================
# ARMAZENAMENTO WASABI S3
# ========================================
# Obtenha essas credenciais no painel do Wasabi
WASABI_ACCESS_KEY=sua_wasabi_access_key
WASABI_SECRET_KEY=sua_wasabi_secret_key
WASABI_BUCKET=nome_do_seu_bucket
WASABI_REGION=us-east-1
WASABI_ENDPOINT=https://s3.wasabisys.com

# ========================================
# CONFIGURAÇÕES DE EMAIL
# ========================================
# OPÇÃO 1: SendGrid
SENDGRID_API_KEY=sua_api_key_sendgrid
SENDGRID_FROM_EMAIL=noreply@seudominio.com
SENDGRID_FROM_NAME=NewCAM System

# OPÇÃO 2: AWS SES (alternativa)
# AWS_SES_ACCESS_KEY=sua_access_key_aws_ses
# AWS_SES_SECRET_KEY=sua_secret_key_aws_ses
# AWS_SES_REGION=us-east-1
# AWS_SES_FROM_EMAIL=noreply@seudominio.com

# ========================================
# CONFIGURAÇÕES DE MÍDIA E STREAMING
# ========================================
RTSP_PORT=554
RTMP_PORT=1935
HLS_PORT=8080
STREAM_QUALITY=720p
RECORDING_SEGMENT_DURATION=300
HLS_SEGMENT_DURATION=10
MAX_CONCURRENT_STREAMS=50

# Servidores de Streaming (SRS/ZLMediaKit)
SRS_API_URL=http://localhost:1985/api/v1
ZLM_API_URL=http://localhost:80/index/api
ZLM_SECRET=sua_chave_secreta_zlmediakit
ZLM_BASE_URL=http://localhost
STREAMING_SERVER=zlm

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ========================================
CAMERA_HEALTH_CHECK_INTERVAL=30
OFFLINE_ALERT_THRESHOLD=120
STORAGE_CLEANUP_INTERVAL=3600
DEFAULT_RETENTION_DAYS=30
MAX_RECORDING_SIZE_GB=100

# ========================================
# REDIS (CACHE E FILAS)
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=sua_senha_redis_se_houver
REDIS_DB=0

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ========================================
DEBUG=true
LOG_LEVEL=debug
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# ========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ========================================
# Configure apenas para ambiente de produção
DOMAIN=https://newcam.seudominio.com
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# ========================================
# CONFIGURAÇÕES DE BACKUP E SEGURANÇA
# ========================================
BACKUP_INTERVAL_HOURS=24
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
SESSION_TIMEOUT_MINUTES=60

# ========================================
# CONFIGURAÇÕES DE PERFORMANCE
# ========================================
MAX_UPLOAD_SIZE_MB=500
MAX_CONCURRENT_UPLOADS=10
CACHE_TTL_SECONDS=300
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ========================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES
# ========================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
NOTIFICATION_BATCH_SIZE=50
NOTIFICATION_RETRY_ATTEMPTS=3

# ========================================
# CONFIGURAÇÕES DE LOGS
# ========================================
LOG_FILE_PATH=./storage/logs/newcam.log
LOG_MAX_SIZE_MB=100
LOG_MAX_FILES=10
LOG_ROTATION_INTERVAL=daily

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO LOCAL
# ========================================
LOCAL_STORAGE_PATH=./storage
TEMP_UPLOAD_PATH=./storage/temp
HLS_OUTPUT_PATH=./storage/hls
RECORDING_OUTPUT_PATH=./storage/recordings

# ========================================
# VARIÁVEIS OPCIONAIS PARA RECURSOS AVANÇADOS
# ========================================

# Integração com serviços de monitoramento
# SENTRY_DSN=sua_sentry_dsn_para_error_tracking
# DATADOG_API_KEY=sua_datadog_api_key_para_metricas

# Configurações de CDN (opcional)
# CDN_URL=https://cdn.seudominio.com
# CDN_ACCESS_KEY=sua_cdn_access_key

# Configurações de autenticação externa (opcional)
# GOOGLE_CLIENT_ID=seu_google_client_id
# GOOGLE_CLIENT_SECRET=seu_google_client_secret
# MICROSOFT_CLIENT_ID=seu_microsoft_client_id
# MICROSOFT_CLIENT_SECRET=seu_microsoft_client_secret

# Configurações de webhook (opcional)
# WEBHOOK_SECRET=sua_chave_secreta_webhook
# WEBHOOK_TIMEOUT=30000

# Configurações de rate limiting avançado
# RATE_LIMIT_REDIS_URL=redis://localhost:6379
# RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
# RATE_LIMIT_SKIP_FAILED_REQUESTS=false