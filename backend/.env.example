# Configurações do Servidor
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Configurações de Banco de Dados
DATABASE_URL=postgresql://username:password@localhost:5432/newcam_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=newcam_db
DATABASE_USER=username
DATABASE_PASSWORD=password

# Configurações de Autenticação
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Configurações de Redis (Cache)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Configurações de Upload/Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,mp4,avi,mov

# Configurações de Streaming
RTSP_PORT=8554
RTMP_PORT=1935
STREAMING_QUALITY=720p
MAX_CONCURRENT_STREAMS=10

# Configurações de FFmpeg
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Configurações de AWS S3 (opcional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=newcam-storage

# Configurações de Wasabi S3 (Armazenamento Principal)
WASABI_ACCESS_KEY_ID=your-wasabi-access-key
WASABI_SECRET_ACCESS_KEY=your-wasabi-secret-key
WASABI_BUCKET_NAME=newcam-recordings
WASABI_REGION=us-east-1
WASABI_ENDPOINT=https://s3.us-east-1.wasabisys.com

# Configurações de Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@newcam.com

# Configurações de SendGrid (Email Principal)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@newcam.com
SENDGRID_FROM_NAME=NewCAM System

# Configurações de Supabase (Banco de Dados Principal)
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Configurações de Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Configurações de Monitoramento
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Configurações de Segurança
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:5173
SESSION_SECRET=your-session-secret-here

# Configurações de Câmeras
DEFAULT_CAMERA_TIMEOUT=30000
MAX_RECONNECT_ATTEMPTS=5
RECONNECT_INTERVAL=5000
STREAM_BUFFER_SIZE=1024

# Configurações de Gravação
RECORDING_ENABLED=true
RECORDING_PATH=./recordings
RECORDING_DURATION=3600
RECORDING_QUALITY=medium
AUTO_DELETE_RECORDINGS=true
RECORDING_RETENTION_DAYS=30

# Configurações de Notificações
NOTIFICATIONS_ENABLED=true
WEBHOOK_URL=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Configurações de Machine Learning/AI (futuro)
AI_ENABLED=false
AI_MODEL_PATH=./models
OBJECT_DETECTION_ENABLED=false
FACE_RECOGNITION_ENABLED=false
MOTION_DETECTION_ENABLED=true

# Configurações de Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=7

# Configurações de Debug
DEBUG_MODE=false
VERBOSE_LOGGING=false
PROFILING_ENABLED=false