generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Camera {
  id          String   @id @default(cuid())
  name        String
  rtspUrl     String
  status      String   @default("offline")
  isRecording Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("cameras")
}

model Recording {
  id        String   @id @default(cuid())
  cameraId  String
  fileName  String
  filePath  String
  fileSize  Int      @default(0)
  duration  Int      @default(0)
  startTime DateTime
  endTime   DateTime?
  status    String   @default("recording")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("recordings")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      String   @default("user")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

model SystemHealth {
  id        String   @id @default(cuid())
  cpuUsage  Float
  memoryUsage Float
  diskUsage Float
  networkRx Float
  networkTx Float
  timestamp DateTime @default(now())
  
  @@map("system_health")
}